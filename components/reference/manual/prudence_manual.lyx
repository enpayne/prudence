\end_layout

\begin_layout Plain Layout

	if (!isAuthorized(conversation)) {
\end_layout

\begin_layout Plain Layout

		var content = '<html><body>' + conversation.reference + ' is blocked to
 you!</body></html>'
\end_layout

\begin_layout Plain Layout

		conversation.setResponseText(content, 'text/html', 'en', 'UTF-8')
\end_layout

\begin_layout Plain Layout

	}
\end_layout

\begin_layout Plain Layout

}
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

function isAuthorized(conversation) {
\end_layout

\begin_layout Plain Layout

	var cookie = conversation.getCookie('admin')
\end_layout

\begin_layout Plain Layout

